@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<ApplicationUser>

<div class="bg-primary text-white p-1 m-1 text-center">
    <h2>User List</h2>
</div>
<div class="text-danger" asp-validation-summary="All"></div>
<table class="table table-bordered table-striped m-1 p-1">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Delete</th>
        <th>Update</th>
        <th>User Block</th>

    </tr>
    @if (Model.Count() == 0)
    {
        <tr >
            <td class="text-center btn-success" colspan="3">No Users</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.UserName</td>
    <td>@item.Email</td>
    <td>
        <form asp-route-id="@item.Id" asp-action="Delete" asp-controller="Admin" method="post">
            <input class="btn btn-danger" type="submit" value="Delete" />
        </form>

    </td>
    <td>
        <form asp-route-id="@item.Id" asp-action="Update" asp-controller="Admin" method="get">
            <input class="btn btn-primary" type="submit" value="Update" />
        </form>
    </td>
    <td>

        <form asp-route-id="@item.Id" asp-action="Block" asp-controller="Admin" method="get">
            <input  id="mybtn" class="btn btn-primary " type="submit" value="UnBlocking" />
        </form>

    </td>
</tr>
        }
    }
</table>
<a asp-controller="Admin" asp-action="Create" class="btn btn-success">Create </a>

